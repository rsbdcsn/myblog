<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rsbdcsn.myblog.mapper.UserMapper">

    <resultMap id="userAllMap" type="com.rsbdcsn.myblog.bean.User">
        <id column="USER_ID" property="userId" jdbcType="INTEGER"></id>
        <result column="USER_IP" property="userIp" jdbcType="VARCHAR"></result>
        <result column="USER_NAME" property="userName" jdbcType="VARCHAR"></result>
        <result column="USER_PASSWORD" property="userPassword" jdbcType="VARCHAR"></result>
        <result column="USER_NICKNAME" property="userNickname" jdbcType="VARCHAR"></result>
        <result column="USER_IMAGE" property="userImage" jdbcType="VARCHAR"></result>
        <result column="USER_EMAIL" property="userEmail" jdbcType="VARCHAR"></result>
        <result column="USER_QQ" property="userQq" jdbcType="VARCHAR"></result>
        <result column="USER_TELEPHONE_NUMBER" property="userTelephoneNumber" jdbcType="VARCHAR"></result>
        <result column="USER_REGISTRATION_TIME" property="userRegistrationTime" jdbcType="DATETIME"></result>
        <result column="USER_STATUS" property="userStatus" jdbcType="CHAR"></result>
        <result column="REVISION" property="revision" jdbcType="INTEGRE"></result>
        <result column="CREATED_BY" property="createdBy" jdbcType="VARCHAR"></result>
        <result column="CREATED_TIME" property="createTime" jdbcType="DATETIME"></result>
        <result column="UPDATED_BY" property="updatedBy" jdbcType="VARCHAR"></result>
        <result column="UPDATED_TIME" property="updatedTime" jdbcType="DATETIME"></result>
    </resultMap>

    <select id="selectUserByUserId" parameterType="INTEGER" resultMap="userAllMap">
        select * from WUD_USER where USER_ID = #{userId}
    </select>

</mapper>